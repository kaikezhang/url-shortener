# Staging Environment Configuration Template
# Copy this file to .env.staging and update values

# Server Configuration
PORT=3000
NODE_ENV=staging

# Base URL for shortened links
# Local staging: http://localhost:3000
# Railway staging: https://your-app-staging.up.railway.app
BASE_URL=http://localhost:3000

# Feature Flags (Enable more features in staging for testing)
ENABLE_ANALYTICS=true
ENABLE_CUSTOM_CODES=true
ENABLE_RATE_LIMITING=true

# Rate Limiting (More lenient than production for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Database Configuration (Staging Database)
# Use separate database from production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=url_shortener_staging
DB_USER=postgres
DB_PASSWORD=your_staging_password
DB_POOL_MIN=2
DB_POOL_MAX=10
